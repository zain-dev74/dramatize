# Drama Streaming Website Environment Configuration
# Development Environment Variables for Local Testing

# ===== SERVER PORTS =====
PORT=4000
ADMIN_PORT=3002

# ===== DOMAIN CONFIGURATION =====
DOMAIN=localhost:4000
ADMIN_DOMAIN=localhost:3002

# ===== CORS CONFIGURATION =====
CORS_ORIGIN=http://localhost:4000

# ===== NODE ENVIRONMENT =====
NODE_ENV=development

# ===== AUTHENTICATION & SECURITY =====
JWT_SECRET=dramatize-jwt-secret-key-2025-production
SESSION_SECRET=dramatize-session-secret-key-2025-production

# ===== ADMIN CREDENTIALS =====
ADMIN_USERNAME=famsh.05
ADMIN_PASSWORD=secure-admin-password-2025

# ===== VIDEO STREAMING SECURITY =====
VIDEO_SECRET_KEY=dramatize-video-secret-key-2025
HLS_ENCRYPTION_KEY=dramatize-hls-encryption-key-2025
CDN_BASE_URL=/videos

# ===== FILE UPLOAD CONFIGURATION =====
UPLOAD_MAX_SIZE=500MB
UPLOAD_PATH=./admin/uploads

# ===== VIDEO CONFIGURATION =====
VIDEO_QUALITY=1080p
VIDEO_BUFFER_SIZE=2MB

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=mysql://root:@localhost:3306/dramatize_db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=dramatize_db
DB_USER=root
DB_PASSWORD=

# ===== ANALYTICS CONFIGURATION =====
ANALYTICS_ENABLED=true
ANALYTICS_TRACKING_ID=your-analytics-id-here

# ===== SSL/HTTPS CONFIGURATION =====
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# ===== EMAIL CONFIGURATION (if needed) =====
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password

# ===== BACKUP CONFIGURATION =====
BACKUP_ENABLED=true
BACKUP_INTERVAL=24
BACKUP_PATH=./backups

# ===== MONITORING =====
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ===== CACHE CONFIGURATION =====
CACHE_ENABLED=true
CACHE_TTL=3600

# ===== API CONFIGURATION =====
API_VERSION=v1
API_RATE_LIMIT=1000

# ===== FEATURE FLAGS =====
FEATURE_ANALYTICS=true
FEATURE_VIDEO_ENCRYPTION=true
FEATURE_ADMIN_PANEL=true
FEATURE_USER_PROFILES=true

# ===== THIRD PARTY INTEGRATIONS =====
GOOGLE_ANALYTICS_ID=your-ga-id
FACEBOOK_PIXEL_ID=your-fb-pixel-id

# ===== DEVELOPMENT/DEBUG =====
DEBUG_MODE=false
VERBOSE_LOGGING=false